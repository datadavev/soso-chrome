{
  "name": "Tangram",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Apply Tangram to page",
  "author": "Dave Vieglais",
  "homepage_url": "https://github.com/datadavev/soso-chrome",
  "icons": {
    "128": "images/tangram_128.png"
  },
  "browser_action": {
    "default_icon": "images/tangram_128.png",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*","http://*/*"],
      "run_at": "document_idle",
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["tabs", "http://*/*", "https://*/*", "storage","webNavigation"]
}
